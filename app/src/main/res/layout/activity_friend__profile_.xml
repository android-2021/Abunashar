<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_focused"
    tools:context=".Friend_Profile_Activity">


    <ImageView
        android:id="@+id/iv_friend_image"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/download"
        android:transitionName="ImageTrans"/>

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="59dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/backicon"
        android:transitionName="ImageTrans"/>

    <TextView
        android:id="@+id/tv_friend_name"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="279dp"
        android:text="Name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        android:transitionName="nameTrans" />

    <ImageView
        android:id="@+id/chat"
        android:layout_width="103dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="357dp"
        app:srcCompat="@drawable/ic_chat" />

    <TextView
        android:id="@+id/tv_friend_status"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="261dp"
        android:text="Status"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        android:transitionName="statusTrans" />

    <Button
        android:id="@+id/bt_add_friend"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginBottom="137dp"
        android:background="@color/colorPrimaryDark"
        android:text="Add Friend Request"
        android:textColor="@android:color/primary_text_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_cancle_request"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="60dp"
        android:background="@color/com_facebook_blue"
        android:text="Cancle Friend Request"
        android:textColor="@android:color/primary_text_dark"
        android:textStyle="bold"
        android:visibility="invisible" />
</RelativeLayout>