<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".RegisterActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/download"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="481dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="373dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="User Name"
        android:textColor="@color/colorstri"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="472dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="296dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="email"
        android:textColor="@color/colorstri"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="478dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="442dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="password"
        android:textColor="@color/colorstri"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_country"
        android:layout_width="181dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="517dp"
        android:layout_marginEnd="211dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="Country"
        android:textColor="@color/colorstri"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="469dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/edittxt_circle_bg"
        android:ems="10"
        android:hint="Name"
        android:textColor="@color/colorstri"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/back_activity"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/backicon" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/ic_action_name" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:inputType="textEmailAddress"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="301dp"
        android:src="@drawable/ic_action_mail" />

    <ImageView
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="372dp"
        android:src="@drawable/ic_action_name" />

    <ImageView
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/ic_action_password" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="234dp"
        android:layout_marginLeft="234dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/bt_border"
        android:text="Register" />

</RelativeLayout>